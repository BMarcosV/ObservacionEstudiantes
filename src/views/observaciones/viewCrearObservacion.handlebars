<div class="container mt-5">
    <head>
    <title>{{title}}</title>  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="css/footer/footer.css">
        {{{style}}}
    </head>
    <h1>{{title}}</h1>
    <form action="/observacion/crear" method="POST">
        <div class="mb-3">
            <label for="ID_ESTUDIANTE" class="form-label">Estudiante</label>
            <select class="form-control" id="ID_ESTUDIANTE" name="ID_ESTUDIANTE" required>
                <option value="">Seleccione un estudiante</option>
                {{#each estudiantes}}
                <option value="{{this.ID_ESTUDIANTE}}">{{this.NOMBRE_ESTUDIANTE}} {{this.APELLIDO1_ESTUDIANTE}} {{this.APELLIDO2_ESTUDIANTE}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="ID_USUARIO" class="form-label">Usuario</label>
            <select class="form-control" id="ID_USUARIO" name="ID_USUARIO" required>
                <option value="">Seleccione un usuario</option>
                {{#each usuarios}}
                <option value="{{this.ID_USUARIO}}">{{this.NOMBRE_USUARIO}} {{this.APELLIDO1_USUARIO}} {{this.APELLIDO2_USUARIO}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="OBSERVACION" class="form-label">Observación</label>
            <textarea class="form-control" id="OBSERVACION" name="OBSERVACION" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Crear Observación</button>
        <a href="/observacion" class="btn btn-secondary">Cancelar</a>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

    </form>
</div>
