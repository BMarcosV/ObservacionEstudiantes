
<div class="container mt-5">
    <h1>{{title}}</h1>
    <a href="/observacion/crear" class="btn btn-success mb-3">Crear Nueva Observación</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID_ESTUDIANTE</th>
                <th scope="col">ID_USUARIO</th>
                <th scope="col">OBSERVACION</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            {{#each obs}}
            <tr>
                <th scope="row">{{this.ID_OBSERVACIONES}}</th>
                <th scope="row">{{this.ID_ESTUDIANTE}}</th>
                <th scope="row">{{this.ID_USUARIO}}</th>
                <th scope="row">{{this.OBSERVACION}}</th>
                <td><a class="btn btn-primary" href="/observacion/editar/{{this.ID_OBSERVACIONES}}" role="button">Editar</a></td>
                <td>
                    <form action="/observacion/eliminar/{{this.ID_OBSERVACIONES}}" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar esta observación?')">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
